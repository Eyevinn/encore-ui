# Docker environment variables for Encore UI
# Copy this file to .env and modify the values for your deployment

# The URL of your Encore API server
VITE_ENCORE_API_URL=http://localhost:8080

# Optional bearer token for API authentication  
VITE_ENCORE_BEARER_TOKEN=

# Port for the application to listen on (default: 3000)
PORT=3000

# Host port to bind to (for docker-compose)
HOST_PORT=3000

# Example with different configuration
# VITE_ENCORE_API_URL=http://encore-server.example.com:8080
# VITE_ENCORE_BEARER_TOKEN=eyJhbGciOiJIUzI1NiIs...
# PORT=8080
# HOST_PORT=8080